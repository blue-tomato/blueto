{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"globals": ["React"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"a11y": {
				"useAltText": "off",
				"useButtonType": "off"
			},
			"correctness": {
				"noNodejsModules": "off"
			},
			"performance": {
				"noBarrelFile": "off"
			},
			"style": {
				"noDefaultExport": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
