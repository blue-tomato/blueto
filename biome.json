{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
	"assist": {
		"enabled": true,
		"actions": {
			"recommended": true,
			"source": {
				"recommended": true,
				"organizeImports": "on"
			}
		}
	},
	"files": {
		"includes": ["**/*", "!lib/*"]
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"globals": ["React", "StoryMeta"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useAltText": "off",
				"useButtonType": "off",
				"useKeyWithClickEvents": "off"
			},
			"correctness": {
				"noNodejsModules": "off",
				"noUnusedVariables": {
					"fix": "none",
					"level": "warn",
					"options": {}
				},
				"useImportExtensions": "off"
			},
			"performance": {
				"noBarrelFile": "off"
			},
			"style": {
				"noDefaultExport": "off",
				"useBlockStatements": "off",
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"filenameCases": ["camelCase", "export", "PascalCase"],
						"requireAscii": true
					}
				}
			},
			"suspicious": {
				"noReactSpecificProps": "off"
			}
		}
	}
}
